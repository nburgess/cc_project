<style type="text/css" id=>

#yo a:link {color:#BABAD4; }
#yo a:active {color:#BABAD4;}
#yo a:visited {color:#BABAD4;}
#yo a:hover {color: white;}
</style>


<div style="position:absolute;background-color:#30307e; width:100%;height: 45px;margin-bottom: emCalc(30);"></div>


<div id="indentb">
<% if user_signed_in? %>
<nav class="top-bar" >
  <ul class="title-area" >
    <li class="name top-bar-sections"><h1 style="font-family:serif;"><a><%= link_to "XC", root_path%></a></h1></li>
    <li class="toggle-topbar menu-icon fuckthepolice"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <ul class="left">
      <li class="divider"></li>
      <li class="has-dropdown active">
      <a>Profile</a>
        <ul class="dropdown">
          <li class="active"><%= link_to 'Profile', user_path(current_user) %></li>
          <li class="active"><%= link_to 'New Distance Essential', new_distance_essential_path %></li>
        </ul>
      </li>
         
      <li class="divider"></li>
      <li class="active"><%= link_to 'Team', teams_path %></li>
      <li class="divider"></li>
    </ul>
    <ul class="right">
      <li class="divider"></li>
      <li class="has-dropdown active">
      <a>Account</a>
        <ul class="dropdown">
          <li class="active"><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
          <li class="active"><%= link_to 'Edit Account', edit_user_registration_path %></li>
        </ul>
      </li>
      <li class="divider"></li>

      <% if current_user.has_role? :admin %>
      <!--<li class="active">
        <%= link_to 'Old Admin', users_path %>
      </li>-->
      <li class="active">
        <%= link_to 'Admin', rails_admin_path%>
      </li>
      <% end %>
    </ul>
  </section>
</nav>


<%else%>
<nav class="top-bar">
  <ul class="title-area">
    <li class="name">
      <h1 style="font-family:serif;"><a><%= link_to "XC", root_path%></a></h1>
    </li>
    <li class="toggle-topbar menu-icon fuckthepolice"><a href="#"><span>Menu</span></a>
    </li>
  </ul>
  <section class="top-bar-section">
    <ul class="right" >
        <li class="divider"></li>
        <li class="active"><%= link_to "About", static_pages_about_path%></li>
        <li class="divider"></li>
        <li class="active"><%= link_to 'Sign up', new_user_registration_path %></li>
        <li class="divider"></li>
        <li class="active"><%= link_to "Login", new_user_session_path%></li>
        <li class="divider"></li>
    </ul>
  </section>
</nav>
<%end%>
</div>




